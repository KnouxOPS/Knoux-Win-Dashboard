{
  "name": "knoux-win",
  "productName": "Knoux Win Cyberpunk Edition",
  "version": "2.0.0",
  "description": "Windows Centralized Script Manager - Cyberpunk Edition",
  "main": "main.js",
  "author": {
    "name": "Knoux Team",
    "email": "support@knoux.com"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.knoux.win.cyberpunk",
    "productName": "Knoux Win Cyberpunk Edition",
    "copyright": "Copyright Â© 2024 Knoux Team",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json",
      "main.js",
      "preload.js",
      "config/**/*",
      "scripts/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "rfc3161TimeStampServer": "http://timestamp.comodoca.com/rfc3161"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Knoux Win"
    }
  },
  "dependencies": {
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.1.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "keywords": [
    "windows",
    "maintenance",
    "powershell",
    "optimization",
    "cleaning",
    "electron",
    "react",
    "cyberpunk"
  ]
}